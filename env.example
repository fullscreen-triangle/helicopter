# Helicopter Configuration
# Copy this file to .env and fill in your actual values

# API Keys for model providers
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
REPLICATE_API_TOKEN=your_replicate_api_token_here

# Model paths and configurations
DIFFUSION_MODEL_PATH=stabilityai/stable-diffusion-2-1
LLM_MODEL_PATH=microsoft/DialoGPT-medium
VISION_MODEL_PATH=openai/clip-vit-large-patch14

# Storage configurations
DATA_DIR=./data
MODELS_DIR=./models
CACHE_DIR=./cache
OUTPUTS_DIR=./outputs

# Processing configurations
BATCH_SIZE=8
MAX_WORKERS=4
DEVICE=auto  # auto, cpu, cuda:0, etc.
PRECISION=fp16  # fp32, fp16, bf16

# Tokenization settings
PATCH_SIZE=16
MAX_VISUAL_TOKENS=2048
DENOISING_STEPS=50

# Training configurations
LEARNING_RATE=1e-4
WARMUP_STEPS=1000
MAX_EPOCHS=10
GRADIENT_ACCUMULATION_STEPS=4

# Web API settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Logging and monitoring
LOG_LEVEL=INFO
WANDB_PROJECT=helicopter
WANDB_ENTITY=your_wandb_entity

# Development settings
DEBUG=false
PROFILE=false
VERBOSE=false 